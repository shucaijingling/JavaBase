<mapper namespace="com.shucai.dao.IUserDao">

    <!--sql唯一标识：namespace.id来组成： statementId-->
    <select id="findAll" resultType="com.shucai.pojo.User">
        select * from user
    </select>

    <select id="findByCondition" paramType="com.shucai.pojo.User" resultType="com.shucai.pojo.User">
        select * from user where id = #{id} and username = #{username}
    </select>
</mapper>