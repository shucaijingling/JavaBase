<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.shucai.mapper.IOrderMapper">


    <resultMap id="order" type="com.shucai.muti.pojo.Order">
        <result property="id" column="id"></result>
        <result property="orderTime" column="orderTime"></result>
        <result property="total" column="total"></result>
        <association property="user" javaType="com.shucai.muti.pojo.User">
            <result property="id" column="uid" ></result>
            <result property="username" column="username" ></result>
        </association>
    </resultMap>
    <select id="findOrderAndUser" resultMap="order">
        select * from orders o, user u
        where o.uid = u.id
    </select>
</mapper>